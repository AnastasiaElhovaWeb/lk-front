include mixins/mixins
doctype html
html(lang='ru')
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title Восстановить пароль
        link(rel="shortcut icon" href="assets/image/favicon.ico")
        link(rel='stylesheet' href="assets/css/core.css")
        link(rel='stylesheet' href="assets/css/main.css")
    body
        .container-fluid.d-flex.p-xl-0.flex-wrap.container-main.container-centered
            .content
                .panel
                    h2.mb-4 Восстановить пароль
                    form.ajax-form(novalidate)
                        input(type='hidden' name='action' value='callback')
                        .form-group.mb-3
                            label.mb-2 Логин
                            input.form-control(type="text" required="required")
                            .invalid-feedback
                        .form-group.mb-3
                            label.mb-2 Пароль
                            input.form-control(type="password" required="required" data-password-origin)
                            .invalid-feedback
                        .form-group.mb-3
                            label.mb-2 Повторить пароль
                            input.form-control(type="password" required="required" data-password-equal )
                            .invalid-feedback
                        .form-group.mt-4
                            button.btn.btn-primary.w-100(type="submit" data-toggle="modal" data-target="#changePasword") Восстановить пароль
                        .form-group.mt-4.text-center
                            a(href="avtorisation.html") Авторизация

            include blocks/_modals
        script(src="assets/js/vendor.js")
        script(src="assets/js/custom.js")





